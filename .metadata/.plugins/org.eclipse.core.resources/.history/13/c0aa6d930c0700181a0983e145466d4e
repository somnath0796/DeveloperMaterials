package JDBC;

import java.sql.*;
import javax.sql.*;

public class DBProgram {
	
	public static void main(String[] args) {
		Connection con = null;
		Statement stmt = null;
		ResultSet rs = null;
		
		try{
			Class.forName("com.mysql.jdbc.Driver");
			con = DriverManager.getConnection("jdbs:mysql://localhost:3306/demo","root","root");
			
			System.out.println("Databse is now Connected...");
		}catch(ClassNotFoundException e){
			System.out.println("Driver Class not Found.");
		} catch (SQLException e) {
			e.printStackTrace();
		}finally{
			try {
				con.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
	}
	
}
